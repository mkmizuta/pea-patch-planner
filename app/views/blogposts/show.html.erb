<title><% @blogpost.title %></title>
<div class="ui piled segment">
  <div class="ui circular segment">
    <h2 class="ui header">
      Here is <br> your
      <div class="sub header">BLOG POST</div>
    </h2>
  </div>
<div class="blogpost" >
<p>Title: <%= @blogpost.title %>
<p>Author: <%= @blogpost.user.username.titleize %>
<p>Text: <%= raw @blogpost.post_text.html_safe %>
<p><td><%= link_to('Edit', edit_blogpost_path(@blogpost)) %></td>
   <td><%= link_to('Destroy', blogpost_path(@blogpost),
                  method: :delete, data: { confirm: 'Are you sure?' }) %></td>
</div>

<div id="disqus_thread"></div>

<!-- Discuss  Start -->
