<h4>User index</h4>
<table class="ui table segment">
  <thead>
    <tr><th>User</th>
    <th>Admin?</th>
    <th></th>
  </tr></thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= form_for user, url: {action: "update_user"}  do |f| %>
          Admin User&#63; &nbsp;
          <%= f.check_box :admin %>
          <%= f.hidden_field :id, :value => user.id %>
      <td><%= f.submit 'Submit', :class => "ui tiny blue submit button" %></td>
          <% end %>
        <% end %>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
    </tr>
  </tfoot>
</table>
