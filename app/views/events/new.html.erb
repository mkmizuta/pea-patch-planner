
<h3>Create an event:</h3>

<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    <%= f.label :name %> : <br />
    <%= f.text_field :name %>
    <br>
    <%= f.label :start_time %> : <br />
    <%= f.datetime_local_field :start_time %>
    <br>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= submit_tag("Create an event!") %>

<% end %>
